RED=\033[0;31m
GREEN=\033[0;32m
RESET=\033[0m
BKGRAY=\033[47;90m
BKGRAYGREEN=\033[1;92m
BKGRAYRED=\033[1;91m

################################################################################
# 									Executable	 	 						   #
################################################################################

NAME = libftprintf.a
TEST_EXEC = testerprintf

################################################################################
# 							Dir	Path	Variables 							   #
################################################################################

SRCDIR = src
OBJDIR = obj
TESTDIR = test

################################################################################
# 						Compiler and Flags	Variables						   #
################################################################################

CC = cc
CFLAGS = -Wall -Wextra -Werror -I inc -I ../../42_Libft/libft/inc #$(LIBFT_DIR)/inc
RM = rm -f
RMD = rm -rf

################################################################################
# 							Libft Variables 								   #
################################################################################

LIBFT_DIR = ../../42_Libft/libft 
LIBFT = $(LIBFT_DIR)/libft.a
LIBFT_REPO = git@github.com:pin3dev/42_Libft.git

################################################################################
# 							Files	Path	Variables 						   #
################################################################################

SRC =   $(SRCDIR)/ft_printf.c \
        $(SRCDIR)/hex.c \
        $(SRCDIR)/pointer.c \
        $(SRCDIR)/unsig.c \
		$(SRCDIR)/utils.c \

OBJ = $(SRC:$(SRCDIR)/%.c=$(OBJDIR)/%.o)

################################################################################
# 							Manual	Targets		 							   #
################################################################################

all: $(LIBFT) $(NAME)

clean:
	@$(RM) $(OBJ)
	@if [ -d "$(OBJDIR)" ]; then $(RMD) $(OBJDIR); fi
	@echo "${BKGRAY}Printf:${BKGRAYRED}- Obj${RESET}"

fclean: clean
	@$(RM) $(NAME)
	@if [ -f "$(TEST_EXEC)" ]; then $(RM) $(TEST_EXEC); fi
	@echo "${BKGRAY}Printf: ${BKGRAYRED}- Exec${RESET}"

re: fclean all

################################################################################
# 							Test Target 		 							   #
################################################################################

test: all
	@$(CC) -o $(TEST_EXEC) $(TESTDIR)/main.c -L. -lftprintf -L$(LIBFT_DIR) -lft
	@echo "Running tests..."
	@./$(TEST_EXEC)

################################################################################
# 							Dependencies Targets							   #
################################################################################

$(LIBFT):
	@if [ ! -d ../../42_Libft ]; then \
		git clone $(LIBFT_REPO) ../../42_Libft > /dev/null 2>&1; \
	fi
	@printf "${BKGRAY}Libft:${RESET} "; 
	@$(MAKE) -C $(LIBFT_DIR)

################################################################################
# 						Auto Targets 				 						   #
################################################################################

$(OBJDIR):
	@mkdir -p $(OBJDIR)

$(OBJDIR)/%.o: $(SRCDIR)/%.c | $(OBJDIR)
	@$(CC) $(CFLAGS) -c $< -o $@

$(NAME): $(OBJ)
	@ar rc $(NAME) $(OBJ) & \
	./gui_load.sh "Printf" # Exibishion of the loading bar
	@wait

################################################################################
# 										PS		 	 						   #
################################################################################

.PHONY: all clean fclean re
